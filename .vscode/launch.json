    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "run.py",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--no-debugger"
            ],
            "jinja": true,
            "justMyCode": false,
        },
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://dev.localhost:5000",
            // "webRoot": "${workspaceFolder}"
            "webRoot": "${workspaceFolder}contracts"
        },
        {
            "name": "Python: flask db migrate -m \"common user database\"",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "justMyCode": false,
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development"
            },
            "args": [
                "db",
                "migrate",
                "-m",
                "common user database",
            ],
            "jinja": true,
        },
    ]
}
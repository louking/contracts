    "version": "0.2.0",
    "configurations": [
        // https://sphinxtechnicalwriting.readthedocs.io/en/latest/tools/toolsindex.html
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://dev.localhost:5000",
            // "webRoot": "${workspaceFolder}"
            "webRoot": "${workspaceFolder}contracts"
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "run.py",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--no-debugger"
            ],
            "jinja": true
        }
    ]
}